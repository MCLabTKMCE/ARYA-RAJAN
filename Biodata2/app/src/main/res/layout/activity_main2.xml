<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="112dp"
        android:layout_height="43dp"
        android:layout_marginTop="40dp"
        android:text="NAME" />

    <TextView
        android:id="@+id/Vname"
        android:layout_width="232dp"
        android:layout_height="43dp"
        android:textSize="18sp"
        android:layout_toRightOf="@id/textView1"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="112dp"
        android:layout_height="43dp"
        android:layout_below="@id/textView1"
        android:layout_marginTop="30dp"
        android:text="ADDRESS" />

    <TextView
        android:id="@+id/Vaddress"
        android:layout_width="232dp"
        android:layout_height="43dp"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/Vname"
        android:layout_toRightOf="@id/textView2"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="112dp"
        android:layout_height="43dp"
        android:layout_below="@id/textView2"
        android:layout_marginTop="30dp"
        android:text="AGE"/>

    <TextView
        android:id="@+id/Vage"
        android:layout_width="232dp"
        android:layout_height="43dp"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/Vaddress"
        android:layout_toRightOf="@id/textView3"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="112dp"
        android:layout_height="43dp"
        android:layout_below="@id/textView3"
        android:layout_marginTop="30dp"
        android:text="GENDER" />

    <TextView
        android:id="@+id/Vgender"
        android:layout_width="232dp"
        android:layout_height="43dp"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/Vage"
        android:layout_toRightOf="@id/textView4"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="112dp"
        android:layout_height="43dp"
        android:layout_below="@id/textView4"
        android:layout_marginTop="30dp"
        android:text="PHONE" />

    <TextView
        android:id="@+id/Vphone"
        android:layout_width="232dp"
        android:layout_height="43dp"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/Vgender"
        android:layout_toRightOf="@id/textView5"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Vphone"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="30dp"
        android:onClick="bBack"
        android:text="BACK" />
</RelativeLayout>
